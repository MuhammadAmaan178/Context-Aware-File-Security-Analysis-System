{
  "manifest_version": 3,
  "name": "Context-Aware Security Scanner",
  "version": "1.0",
  "description": "Safe Browsing Agent that communicates with the Context-Aware Security System.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}